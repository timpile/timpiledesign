<div class="col-md-9">
    <div class="card">
          <div class="card-header">
              <div class="row">
                  <div class="col-md-6">
                      <h5 class="title">Edit Post</h5>
                  </div>
                  <div class="col-md-3">
                  </div>
                  <div class="col-md-3">
                  </div>
              </div>
          </div>
          <div class="card-body">
            <%= render 'form', post: @post %>
        </div>
    </div>
</div>
<div class="col-md-3">
    <div class="card card-user">
        <div class="card-body">
            <h5>Main Image </h5>
            <%= image_tag(image_helper(@post.main_image)) %>
            <h5>Thumb Image </h5>
            <%= image_tag(image_helper(@post.thumb_image)) %>
        </div>
    </div>
</div>
