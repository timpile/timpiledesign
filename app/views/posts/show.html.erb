
<div class="wrapper">
    <div class="section">
        <div class="container">
            <div class="row">
                <div class="col-md-8 ml-auto mr-auto">
                    <h3 class="title"><%= @post.title %></h3>
                    <%= render 'posts/admin_actions', post: @post %>
                    <p><%= markdown @post.body %></p>
                </div>
            </div>
        </div>
    </div>
    <%= render 'posts/post_info', post: @post %>

    <div class="section section-comments">
