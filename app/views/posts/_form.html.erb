<%= form_with(model: post, local: true) do |f| %>
  <div class="row">
      <div class="col-md-6">
          <div class="form-group">
              <%= f.label :title %>
              <%= f.text_field :title, id: :post_title, class: "form-control" %>
          </div>
      </div>
      <div class="col-md-3">
          <div class="form-group">
              <%= f.label :topic %>
              <%= f.select :topic_id, Topic.all.map { |t| [t.name, t.id] }, {}, { class: "selectpicker", data: { style: "btn btn-info btn-round" } } %>
          </div>
      </div>
      <div class="col-md-3">
          <div class="form-group">
              <%= f.label :status %>
              <%= f.select :status, Post.statuses.keys.map { |s| [s.humanize, s] }, {}, { class: "selectpicker", data: { style: "btn btn-info btn-round" } } %>
          </div>
      </div>
  </div>

  <div class="row">
      <div class="col-md-6">
      </div>
      <div class="col-md-3">
          <div class="form-group">
              <span class="btn btn-info btn-round btn-block btn-file">
                  <span id="main_image_text">Main Image</span> <input type="file">
                  <%= f.file_field :main_image, id: "post_main_image" %>
                  <%= f.hidden_field :main_image_cache %>
              </span>
          </div>
      </div>
      <div class="col-md-3">
          <div class="form-group">
              <span class="btn btn-info btn-round btn-block btn-file">
                  <span id="thumb_image_text">Thumb Image</span> <input type="file">
                  <%= f.file_field :thumb_image, id: "post_thumb_image" %>
                  <%= f.hidden_field :thumb_image_cache %>
              </span>
          </div>
      </div>
  </div>

  <div class="row">
      <div class="col-md-12">
          <div class="form-group">
              <%= f.label :body %>
              <%= f.text_area :body, id: :post_body, placeholder: "Blog post content", class: "form-control", rows: 15  %>
          </div>
      </div>
  </div>
  <%= f.submit "Save Post", class:"btn btn-info btn-fill btn-block" %>
<% end %>
