<% if logged_in?(:site_admin) %>
  <nav class="breadcrumb blogcrumb">
    <span class="mx-1"><%= link_to post.status.capitalize, toggle_status_post_path(post) %></span>
    | <span class="mx-1"><%= link_to "Edit", edit_post_path(post) %></span>
    | <span class="mx-1"><%= link_to "Delete", post, method: :delete, data: { confirm: "Are you sure you want to delete this post?" } %></span>
  </nav>
<% end %>
